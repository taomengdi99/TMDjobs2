  <thead>
       <tr>
           <td>
               Positions</td>
           <td>Salary Lower</td>
           <td>Salary Upper</td>
           <td>Time of Create</td>
       </tr>

   </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
  </td>
  <td>
      <%= job.wage_upper_bound %>
  </td>

    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
